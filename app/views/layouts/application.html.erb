<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <p class="nav user">
        <%= t('.welcome') %>, <b><%= current_user.first_name %></b>-<%= link_to t('.guru'), root_path %> |
        <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
      </p>
    <% else %>
      <p class="nav user"><%= link_to t('.create_account'), new_user_registration_path %></p>
    <% end %>

    <%= render 'shared/flash' %>

    <%= yield %>

    <%= render 'shared/footer' %>
  </body>
</html>
