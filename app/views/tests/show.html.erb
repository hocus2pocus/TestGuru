<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<p>
  <strong>Questions:</strong>
  <% @test.questions.each do |question| %>
  <td>
    <tr><%= question.body %></tr>
  </td>
  <% end %>

  <p>
    <%= link_to 'Edit', edit_test_path(@test) %> |
    <%= link_to 'Back', tests_path %> |
    <%= link_to 'Delete',
                      test_path(@test),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
  </p>
</p>
